<%- include('../includes/head.ejs')%>
<link rel="stylesheet" href="/css/auth.css">
<link rel="stylesheet" href="/css/forms.css">
</head>

<body>
    <%- include('../includes/navigation.ejs')%>
  <div class="centered">
    <h1>Login Page</h1>
    <main>
        <%- include('../includes/errorBlock.ejs')%>
        <form class="login-form" action="/login" method="post">
            <div class="form-control">
                <label for="email">E-mail</label>
                <input class="<%= validationsErrors.find(e=>e.param === 'email')?'invalid':''%>" type="email" name="email" id="email" value="<%= oldInput.email%>">
            </div>
            <div class="form-control">
                <label for="password">password</label>
                <input class="<%= validationsErrors.find(e=>e.param === 'password')?'invalid':''%>"  type="password" name="password" id="password" value="<%= oldInput.password%>">
            </div>
            <input type="hidden" name="_csrf" value="<%=csrfToken%>">
            <button class="btn" type="submit">Login</button>
        </form>
        <div class="centered">
            <a href="/reset">Reset Password</a>
        </div>
    </main>
  </div>
    <%- include('../includes/end.ejs')%>
