<%- include('../includes/head.ejs')%>
<link rel="stylesheet" href="/css/orders.css">
</head>

<body>
    <%- include('../includes/navigation.ejs')%>
   <main>
       <% if (orders.length <= 0) {%>
        <h1>Nothing There!</h1>
        <% }else {%>
          <ul class="orders">
            <%orders.forEach((order, i) => { %>
              <li class="orders__item">
                <h1>Order - # <%= order._id %> </h1>
                <%let totalPrice=0;%>
                <ul class="orders__products">
                    <% order.products.forEach((item, i) => {%>
                      <li class="orders__products-item"> 
                      <%=item.product.title%>
                      (<%= item.quantity %>)- 
                      <!-- <a href="/orders/<%=order._id%>">Invoice</a> - -->
                      <span class="Itemprice"><%= item.quantity %> * <%= item.product.price %> = $<%=item.product.price*item.quantity%></span></li>
                  <%
                  totalPrice+=item.product.price*item.quantity;
                });%>
                  <li class="totalPrice">Total Price: <%=totalPrice%> $</li>
                </ul>
              </li>
            <%});%>

          </ul>
            <%}%>
   </main>
    <%- include('../includes/end.ejs')%>
